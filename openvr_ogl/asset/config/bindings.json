{
   "bindings" : {
      "/actions/main" : {
         "poses" : [
            {
               "output" : "/actions/main/in/hand_left",
               "path" : "/user/hand/left/pose/raw"
            },
            {
               "output" : "/actions/main/in/hand_right",
               "path" : "/user/hand/right/pose/raw"
            }
         ],
         "haptics" : [
            {
               "output" : "/actions/main/out/haptic_right",
               "path" : "/user/hand/right/output/haptic"
            },
            {
               "output" : "/actions/main/out/haptic_left",
               "path" : "/user/hand/left/output/haptic"
            }
         ],
         "sources" : [
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/main/in/trigger"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/trigger"
            },
            {
               "inputs" : {
                  "position" : {
                     "output" : "/actions/main/in/trackpad"
                  }
               },
               "mode" : "trackpad",
               "path" : "/user/hand/right/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/main/in/grip"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/grip"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/main/in/application_menu"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/application_menu"
            }
         ]
      }
   },
   "controller_type" : "vive_controller",
   "description" : "Bindings for the OpenVR SDK for the Vive controller",
   "name" : "Bindings for Vive Controller"
}
